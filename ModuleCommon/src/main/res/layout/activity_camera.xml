<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!--拍照-->
    <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.saltwater.modulecommon.camera.CameraSurfaceView
                    android:id="@+id/camera_surfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </FrameLayout>

        <!--右侧操作布局-->
        <FrameLayout
                android:id="@+id/fl_camera_option"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">

            <!--拍照前操作布局-->
            <RelativeLayout
                    android:id="@+id/rl_camera_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/iv_camera_close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:src="@mipmap/ic_common_camera_back"/>

                <ImageView
                        android:id="@+id/iv_camera_take"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_common_camera_take"/>

                <ImageView
                        android:id="@+id/iv_camera_flash"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60dp"
                        android:visibility="invisible"
                        android:src="@mipmap/ic_common_camera_flash_on"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>